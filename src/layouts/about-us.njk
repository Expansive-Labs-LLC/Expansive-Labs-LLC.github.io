<style>
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    padding: 20px;
    justify-items: center;
  }

  .team-card {
    background: white;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
    width: 100%;
    max-width: 300px;
  }

  .team-card img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
  }

  .team-card h2 {
    font-size: 20px;
    margin: 10px 0 5px;
  }

  .team-card p {
    font-size: 14px;
    color: #666;
  }

  .card-profile .row {
    display: flex;
    align-items: stretch;
  }

  .card-profile img {
    object-fit: cover;
    height: 270px!important;
  }

  .card-body {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .row.g-0 {
    margin: 0;
  }
</style>




